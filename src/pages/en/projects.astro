---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div class="mb-6">
    <div class="text-3xl font-bold mb-2">Projects</div>
    <p class="text-base text-gray-500">A selection of the platforms and systems I have architected and developed.</p>
  </div>

  <HorizontalCard
    title="GameBox – Vuvy Game"
  icon="gamepad-2"
    desc="A scalable backend platform powering multiplayer mobile games."
    url="#"
    badge={["Live", "Gaming"]}
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="EthixNG – Architecht"
    icon="wallet"
    desc="A modern, ethical banking system built with microservices architecture."
    url="#"
    badge="Fintech"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Ideal Environment – Idea Learning"
    icon="graduation-cap"
    desc="LMS, exam, analytics, and survey platforms for large-scale educational deployments."
    url="#"
    badge="EdTech"
  />
</BaseLayout>
